<!DOCTYPE module SYSTEM "module.dtd">

<module name="mav_course_exercise">
  <doc>
    <description>
    Exercise module for Autonomous Flight of MAV Course
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="MAV_EXERCISE">
         <dl_setting var="divergence_threshold" min="0" step="0.01" max="1" shortname="div_thresh"/>
         <dl_setting var="counter_threshold" min="1" step="1" max="12" shortname="counter_thresh"/>
         <dl_setting var="test" min="0" step="1" max="1" shortname="test"/>
         <dl_setting var="rotate" min="0" step="1" max="1" shortname="rotate"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <dep>
    <depends>cv_detect_color_object</depends>
  </dep>
  <!-- TODO Specify header, init, periodic, makefile sections  -->
  <header>
    <file name="mav_exercise.h"/>
  </header>
  <init fun="mav_exercise_init()"/>
  <periodic fun="mav_exercise_periodic()" freq="4"/>
  <makefile target="ap|nps">
    <file name="mav_exercise.c"/>
  </makefile>
</module>
